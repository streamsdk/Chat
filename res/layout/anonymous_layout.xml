  <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dip" >

      <ImageView
        android:id="@+id/imgAnoMainPageAvatar"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginLeft="5dp"
        android:scaleType="centerCrop"
         android:layout_centerVertical="true"
        android:src="@drawable/yahoo_no_avatar"
       />
      
      <TextView
            android:id="@+id/txtAnoName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:textAppearance="?android:attr/textAppearanceListItem"
            android:textColor="@color/pinned_header_background"
            android:layout_toRightOf="@+id/imgMainPageAvatar" />
      
      <TextView
            android:id="@+id/txtAnoStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:textSize="15sp"
            android:text="Hey there! I am using CoolChat."
            android:layout_toRightOf="@+id/imgMainPageAvatar"
            android:layout_below="@+id/txtMyfriendFriendName" />
      
      <FrameLayout
           android:id="@+id/messageAnoCountLayout"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignParentRight="true"
           android:layout_centerVertical="true"
           android:visibility="gone">
         <RelativeLayout 
              android:layout_width="wrap_content"
              android:layout_height="wrap_content">
            <ImageView
               android:id="@+id/imageAnoMessageCount"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:src="@drawable/message_count"/>
            <TextView
                android:id="@+id/txtAnoMessageCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/imageAnoMessageCount"
                android:layout_alignLeft="@+id/imageAnoMessageCount"
                android:layout_alignRight="@+id/imageAnoMessageCount"
                android:layout_alignTop="@+id/imageAnoMessageCount"
                android:layout_margin="1dp"
                android:gravity="center"
                android:textSize="12dp"
                android:text="5"
                android:textColor="@color/firstPageTexColor"/>
            </RelativeLayout>
       </FrameLayout>
      
        
    </RelativeLayout>