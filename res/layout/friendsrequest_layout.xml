<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="horizontal"
    android:padding="5dip" >

    <ImageView
        android:id="@+id/imgAvatar"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:scaleType="centerCrop"
         android:layout_centerVertical="true"
        android:src="@drawable/yahoo_no_avatar" />

    <TextView
        android:id="@+id/txtFriendName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="friend name"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center_vertical"      
        android:layout_toRightOf="@id/imgAvatar" />
    
     <TextView
            android:id="@+id/txtMyfriendstatusInAddFriendPage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:textSize="12sp"
            android:text="Hey there! I am using CoolChat."
            android:layout_toRightOf="@+id/imgAvatar"
            android:layout_below="@+id/txtFriendName" />
    

    <ImageView
        android:id="@+id/acceptFriend"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/addfriend" 
        />

</RelativeLayout>